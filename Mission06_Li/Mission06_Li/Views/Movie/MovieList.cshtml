@model IEnumerable<Mission06_Li.Models.Movie>

<h2>Movie Collection</h2>
<table>
    <tr>
        <th>Category</th>
        <th>Title</th>
        <th>Year</th>
        <th>Director</th>
        <th>Rating</th>
        <th>Edited</th>
        <th>Lent To</th>
        <th>Notes</th>
    </tr>
    @foreach (var movie in Model)
    {
        <tr>
            <td>@movie.Category</td>
            <td>@movie.Title</td>
            <td>@movie.Year</td>
            <td>@movie.Director</td>
            <td>@movie.Rating</td>
            <td>@(movie.Edited == true ? "Yes" : "No")</td>
            <td>@movie.LentTo</td>
            <td>@movie.Notes</td>
        </tr>
    }
</table>